/* ec-keyboard 数字键盘组件 */
.ec-keyboard {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #f2f3f5;
  transform: translateY(100%);
  transition: transform 0.3s;
  z-index: 100;
}

.ec-keyboard--show {
  transform: translateY(0);
}

.ec-keyboard__overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 99;
}

.ec-keyboard__body {
  position: relative;
  z-index: 101;
  padding: 16rpx 0;
}

.ec-keyboard__row {
  display: flex;
  margin-bottom: 16rpx;
}

.ec-keyboard__row:last-child {
  margin-bottom: 0;
}

.ec-keyboard__key {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 8rpx;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.ec-keyboard__key:first-child {
  margin-left: 16rpx;
}

.ec-keyboard__key:last-child {
  margin-right: 16rpx;
}

.ec-keyboard__key:active {
  background: #ebedf0;
}

.ec-keyboard__key--delete {
  background: #f5f5f5;
  color: #ee0a24;
}

.ec-keyboard__key--delete:active {
  background: #e0e0e0;
}

.ec-keyboard__key--confirm {
  background: var(--ec-primary, #FF4400);
  color: #fff;
}

.ec-keyboard__key--confirm:active {
  background: #e63b00;
}

.ec-keyboard__key--number {
  background: #fff;
}

.ec-keyboard__key--letter {
  background: #fff;
}

.ec-keyboard__key--province {
  background: #fff;
}

.ec-keyboard__text {
  font-size: 36rpx;
  color: #323233;
  font-weight: 500;
}

.ec-keyboard__key--delete .ec-keyboard__text {
  color: #ee0a24;
}

.ec-keyboard__key--confirm .ec-keyboard__text {
  color: #fff;
}
