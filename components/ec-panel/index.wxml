<view class="ec-panel {{border ? 'ec-panel--border' : ''}} {{custom-class}}" style="{{background ? 'background:' + background + ';' : ''}}{{radius ? 'border-radius:' + radius + ';' : ''}}">
  <!-- 头部区域 -->
  <view wx:if="{{title || desc}}" class="ec-panel__header" style="{{padding ? 'padding: 32rpx;' : ''}}">
    <text wx:if="{{title}}" class="ec-panel__title" style="color: {{titleColor}};">{{title}}</text>
    <text wx:if="{{desc}}" class="ec-panel__desc" style="color: {{descColor}};">{{desc}}</text>
  </view>

  <!-- 内容区域 -->
  <view class="ec-panel__body" style="{{padding ? 'padding: 0 32rpx;' : ''}}">
    <slot />
  </view>

  <!-- 底部区域 -->
  <view wx:if="{{footer}}" class="ec-panel__footer" style="{{padding ? 'padding: 32rpx;' : ''}}color: {{footerColor}};">{{footer}}</view>
</view>
