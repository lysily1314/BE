/* ec-list-item 列表项组件 */
.ec-list-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background: var(--ec-white, #fff);
  position: relative;
  transition: background 0.2s;
  line-height: 1.5;
}

.ec-list-item--border::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 32rpx;
  right: 0;
  height: 1rpx;
  background: var(--ec-border, #eee);
  transform: scaleY(0.5);
}

.ec-list-item--active {
  background: #f5f5f5;
}

.ec-list-item--disabled {
  opacity: 0.5;
}

/* 图标 */
.ec-list-item__icon {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.ec-list-item__icon--left {
  margin-right: 16rpx;
}

.ec-list-item__icon--right {
  margin-left: 8rpx;
}

/* 内容区 */
.ec-list-item__content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
}

.ec-list-item__title-wrap {
  display: flex;
  align-items: center;
  margin-bottom: 4rpx;
}

.ec-list-item__title {
  font-size: var(--ec-font-body, 28rpx);
  color: var(--ec-text-primary, #333);
  font-weight: 500;
  flex: 1;
  min-width: 0;
}

.ec-list-item__desc {
  font-size: var(--ec-font-sm, 24rpx);
  color: var(--ec-text-placeholder, #999);
  line-height: 1.4;
}

/* 右侧 */
.ec-list-item__right {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-left: 16rpx;
  color: var(--ec-text-secondary, #666);
  font-size: var(--ec-font-body, 28rpx);
}
