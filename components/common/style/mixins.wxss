/* ec-ui 通用 mixin 样式 */

/* 点击缩放反馈 */
.ec-hover {
  transition: transform 0.1s ease;
}

.ec-hover--active {
  transform: scale(0.96);
  opacity: 0.88;
}

/* 淡入动画 */
.ec-fade-enter {
  animation: ecFadeIn var(--ec-anim-duration) var(--ec-anim-ease) forwards;
}

.ec-fade-leave {
  animation: ecFadeOut var(--ec-anim-duration) var(--ec-anim-ease) forwards;
}

@keyframes ecFadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes ecFadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}

/* 缩放弹出动画 */
.ec-scale-enter {
  animation: ecScaleIn var(--ec-anim-duration) var(--ec-anim-ease) forwards;
}

.ec-scale-leave {
  animation: ecScaleOut var(--ec-anim-duration) var(--ec-anim-ease) forwards;
}

@keyframes ecScaleIn {
  from {
    opacity: 0;
    transform: scale(0.85);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes ecScaleOut {
  from {
    opacity: 1;
    transform: scale(1);
  }
  to {
    opacity: 0;
    transform: scale(0.85);
  }
}

/* 上滑动画 */
.ec-slide-up-enter {
  animation: ecSlideUpIn var(--ec-anim-duration) var(--ec-anim-ease) forwards;
}

@keyframes ecSlideUpIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 旋转加载 */
.ec-loading-spin {
  animation: ecSpin 0.8s linear infinite;
}

@keyframes ecSpin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 文字省略 */
.ec-ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.ec-ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
