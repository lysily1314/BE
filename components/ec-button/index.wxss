/* ec-button 按钮组件 */
.ec-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 0 32rpx;
  font-weight: 500;
  font-size: var(--ec-font-body);
  line-height: 1;
  text-align: center;
  border-radius: var(--ec-radius);
  border: 2rpx solid transparent;
  transition: transform 0.1s ease, opacity 0.1s ease;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  white-space: nowrap;
}

/* 尺寸 */
.ec-btn--large {
  height: 96rpx;
  font-size: var(--ec-font-title);
  padding: 0 48rpx;
}

.ec-btn--medium {
  height: 80rpx;
  font-size: var(--ec-font-body);
  padding: 0 32rpx;
}

.ec-btn--small {
  height: 56rpx;
  font-size: var(--ec-font-sm);
  padding: 0 20rpx;
  border-radius: var(--ec-radius-sm);
}

/* 类型 - primary */
.ec-btn--primary {
  background: var(--ec-primary);
  color: var(--ec-white);
}

.ec-btn--primary.ec-btn--plain {
  background: var(--ec-white);
  color: var(--ec-primary);
  border-color: var(--ec-primary);
}

/* 类型 - default */
.ec-btn--default {
  background: var(--ec-white);
  color: var(--ec-text-primary);
  border-color: var(--ec-border);
}

/* 类型 - text */
.ec-btn--text {
  background: transparent;
  color: var(--ec-primary);
  padding: 0 8rpx;
  border: none;
}

/* 通栏 */
.ec-btn--block {
  display: flex;
  width: 100%;
}

/* 圆角 */
.ec-btn--round {
  border-radius: var(--ec-radius-round);
}

/* 禁用 */
.ec-btn--disabled {
  opacity: 0.5;
}

/* 点击反馈 */
.ec-btn--active {
  transform: scale(0.96);
  opacity: 0.88;
}

/* loading */
.ec-btn--loading {
  opacity: 0.75;
}

.ec-btn__loading {
  margin-right: 12rpx;
  display: inline-flex;
  align-items: center;
}

.ec-btn__loading-icon {
  width: 28rpx;
  height: 28rpx;
  border: 3rpx solid currentColor;
  border-color: currentColor transparent currentColor transparent;
  border-radius: 50%;
  animation: ecBtnSpin 0.8s linear infinite;
}

@keyframes ecBtnSpin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.ec-btn__icon {
  margin-right: 8rpx;
}

.ec-btn__text {
  display: inline-flex;
  align-items: center;
}
