/* ec-alert 警告提示组件 */
.ec-alert {
  display: flex;
  align-items: flex-start;
  font-size: var(--ec-font-body, 28rpx);
  line-height: 1.5;
  border: 2rpx solid transparent;
  background: var(--ec-bg, #f7f8fa);
  color: var(--ec-text-primary, #333);
  position: relative;
  transition: all 0.3s ease-out;
}

/* 成功 */
.ec-alert--success {
  background: #f0f9f0;
  border-color: #07c160;
  color: #07c160;
}

/* 警告 */
.ec-alert--warning {
  background: #fff5eb;
  border-color: #ff976a;
  color: #ff976a;
}

/* 错误 */
.ec-alert--error {
  background: #fef0f0;
  border-color: #ee0a24;
  color: #ee0a24;
}

/* 信息 */
.ec-alert--info {
  background: #e8f3ff;
  border-color: #1989fa;
  color: #1989fa;
}

/* 图标 */
.ec-alert__icon {
  display: flex;
  align-items: center;
  margin-right: 16rpx;
  flex-shrink: 0;
  margin-top: 2rpx;
}

/* 内容区 */
.ec-alert__content {
  flex: 1;
  min-width: 0;
}

.ec-alert__title {
  font-weight: 600;
  font-size: var(--ec-font-body, 28rpx);
  margin-bottom: 8rpx;
  display: block;
}

.ec-alert__message {
  font-size: var(--ec-font-sm, 24rpx);
  opacity: 0.9;
  display: block;
  word-break: break-all;
}

/* 关闭按钮 */
.ec-alert__close {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
  cursor: pointer;
  border-radius: 50%;
  transition: background 0.2s;
}

.ec-alert__close:active {
  background: rgba(0, 0, 0, 0.05);
}
