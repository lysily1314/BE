/* ec-date-picker 日期选择器组件 */
.ec-date-picker {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  flex-direction: column;
}

.ec-date-picker__overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1;
}

.ec-date-picker__container {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--ec-white, #fff);
  border-radius: 16rpx 16rpx 0 0;
  overflow: hidden;
  z-index: 2;
  transform: translateY(0);
  transition: transform 0.3s ease;
}

.ec-date-picker__container::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: var(--ec-border, #eee);
  transform: scaleY(0.5);
}

.ec-date-picker__toolbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid var(--ec-border, #eee);
  background: var(--ec-white, #fff);
}

.ec-date-picker__cancel,
.ec-date-picker__confirm {
  font-size: var(--ec-font-body, 28rpx);
  color: var(--ec-text-secondary, #666);
  line-height: 1.5;
  padding: 16rpx;
  border-radius: var(--ec-radius, 8rpx);
  cursor: pointer;
}

.ec-date-picker__confirm {
  color: var(--ec-primary, #FF4400);
}

.ec-date-picker__title {
  font-size: var(--ec-font-body, 28rpx);
  font-weight: 600;
  color: var(--ec-text-primary, #333);
  line-height: 1.5;
  text-align: center;
  flex: 1;
}

.ec-date-picker__picker {
  height: 460rpx;
  width: 100%;
}

.ec-date-picker__column-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  font-size: var(--ec-font-body, 28rpx);
  color: var(--ec-text-primary, #333);
  line-height: 1.5;
  padding: 0 16rpx;
  box-sizing: border-box;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* picker-view-column 样式 */
picker-view-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
