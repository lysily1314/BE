/* ec-grid-item 九宫格项组件 */
.ec-grid-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
  background: var(--ec-white, #fff);
}

.ec-grid-item--clickable {
  cursor: pointer;
}

.ec-grid-item--hover {
  background: #f5f5f5;
}

.ec-grid-item--disabled {
  opacity: 0.4;
  cursor: not-allowed;
}

.ec-grid-item__content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  width: 100%;
  height: 100%;
  gap: var(--gap, 16rpx);
}

/* 图标 */
.ec-grid-item__icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 文字 */
.ec-grid-item__text {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.ec-grid-item__title {
  font-size: var(--text-size, var(--ec-font-sm, 24rpx));
  color: var(--ec-text-primary, #333);
  line-height: 1.4;
  font-weight: 500;
}

.ec-grid-item__desc {
  font-size: var(--ec-font-xs, 20rpx);
  color: var(--ec-text-secondary, #666);
  line-height: 1.4;
  margin-top: 8rpx;
}

/* 水平布局 */
.ec-grid-item__content[style*="flex-direction: row"] {
  flex-direction: row;
  gap: 16rpx;
}

.ec-grid-item__content[style*="flex-direction: row"] .ec-grid-item__text {
  align-items: flex-start;
}
