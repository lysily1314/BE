/* ec-tab-bar-item 标签项组件 */
.ec-tab-bar-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  position: relative;
  transition: all 0.3s;
  box-sizing: border-box;
}

.ec-tab-bar-item--hover {
  background: rgba(0, 0, 0, 0.02);
}

.ec-tab-bar-item--disabled {
  opacity: 0.4;
  cursor: not-allowed;
}

.ec-tab-bar-item__content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--gap, 8rpx);
  height: 80%;
  box-sizing: border-box;
}

/* 图标 */
.ec-tab-bar-item__icon {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: var(--icon-size, 40rpx);
  min-height: var(--icon-size, 40rpx);
}

/* 徽标 */
.ec-tab-bar-item__badge {
  position: absolute;
  top: -8rpx;
  right: -16rpx;
  background: #ee0a24;
  color: #fff;
  font-size: 20rpx;
  font-weight: 600;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 16rpx;
  padding: 0 8rpx;
  box-sizing: border-box;
  text-align: center;
  white-space: nowrap;
  transform: scale(0.8);
  transform-origin: top right;
}

.ec-tab-bar-item__dot {
  position: absolute;
  top: -4rpx;
  right: -8rpx;
  width: 16rpx;
  height: 16rpx;
  background: #ee0a24;
  border-radius: 50%;
  transform-origin: top right;
}

/* 文字 */
.ec-tab-bar-item__text {
  font-size: var(--text-size, var(--ec-font-xs, 20rpx));
  line-height: 1.4;
  transition: color 0.3s;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 120rpx;
}
