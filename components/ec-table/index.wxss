.ec-table {
  position: relative;
  width: 100%;
  overflow: hidden;
  background: var(--ec-white, #fff);
}

.ec-table__scroll {
  width: 100%;
  height: 100%;
}

.ec-table__container {
  width: 100%;
  min-width: 100%;
}

.ec-table__header {
  position: relative;
  z-index: 10;
  background: var(--ec-bg, #f5f5f5);
}

.ec-table__header--fixed {
  position: sticky;
  top: 0;
}

.ec-table__body {
  position: relative;
  background: var(--ec-white, #fff);
}

.ec-table__row {
  display: flex;
  width: 100%;
  min-width: 100%;
  border-bottom: 1rpx solid var(--ec-border, #ebedf0);
  transition: background-color 0.2s ease;
}

.ec-table__row--stripe {
  background: var(--ec-stripe-bg, #fafafa);
}

.ec-table__row--hover:active {
  background: var(--ec-hover-bg, #f0f0f0);
}

.ec-table__row--selected {
  background: var(--ec-primary-bg, #fff8f2);
}

.ec-table__cell {
  flex: 1;
  min-width: 0;
  padding: 24rpx 32rpx;
  font-size: var(--ec-font-body, 28rpx);
  color: var(--ec-text-primary, #323233);
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  transition: background-color 0.2s ease;
}

.ec-table__cell--header {
  font-weight: 500;
  color: var(--ec-text-primary, #333);
  background: var(--ec-bg, #f5f5f5);
  position: relative;
}

.ec-table__cell--header::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 1rpx;
  height: 60%;
  background: var(--ec-border, #ebedf0);
}

.ec-table__cell--hover:active {
  background: var(--ec-hover-bg, #f0f0f0);
}

.ec-table__empty {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  min-height: 200rpx;
}

.ec-table__empty-text {
  font-size: var(--ec-font-body, 28rpx);
  color: var(--ec-text-placeholder, #969799);
}

.ec-table__loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  min-height: 200rpx;
}

.ec-table__loading-text {
  font-size: var(--ec-font-body, 28rpx);
  color: var(--ec-text-placeholder, #969799);
}

.ec-table__cell checkbox {
  transform: scale(0.8);
}
