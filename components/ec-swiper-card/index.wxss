/* ec-swiper-card 图片卡片轮播组件 */
.ec-swiper-card {
  position: relative;
  width: 100%;
}

.ec-swiper-card__swiper {
  width: 100%;
}

.ec-swiper-card__item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  overflow: hidden;
}

.ec-swiper-card__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.ec-swiper-card__image--radius {
  border-radius: var(--ec-radius-lg, 16rpx);
}

.ec-swiper-card__image--shadow {
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.ec-swiper-card__title {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: var(--ec-radius, 8rpx);
  font-size: var(--ec-font-body, 28rpx);
  text-align: center;
}

.ec-swiper-card__indicator {
  position: absolute;
  display: flex;
  justify-content: center;
  width: 100%;
  z-index: 1;
}

.ec-swiper-card__indicator--bottom {
  bottom: 20rpx;
}

.ec-swiper-card__indicator--top {
  top: 20rpx;
}

.ec-swiper-card__indicator-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin: 0 8rpx;
  opacity: 0.5;
  transition: all 0.3s;
}

.ec-swiper-card__indicator-dot--active {
  opacity: 1;
  transform: scale(1.2);
}
