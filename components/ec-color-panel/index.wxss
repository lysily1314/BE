/* ec-color-panel 颜色展示面板组件 */
.ec-color-panel {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.ec-color-panel.column {
  flex-direction: column;
}

.ec-color-item {
  position: relative;
  border-radius: var(--ec-radius, 8rpx);
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  cursor: pointer;
}

.ec-color-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.ec-color-item.small {
  width: 120rpx;
  height: 120rpx;
}

.ec-color-item.normal {
  width: 160rpx;
  height: 160rpx;
}

.ec-color-item.large {
  width: 200rpx;
  height: 200rpx;
}

.ec-color-item.row {
  min-width: 160rpx;
}

.ec-color-item.column {
  width: 100%;
  min-height: 120rpx;
}

.ec-color-info {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
  padding: 32rpx 16rpx 16rpx;
  color: var(--ec-white, #fff);
  text-align: left;
}

.ec-color-name {
  display: block;
  font-size: var(--ec-font-sm, 24rpx);
  font-weight: 600;
  line-height: 1.4;
}

.ec-color-value {
  display: block;
  font-size: var(--ec-font-xs, 20rpx);
  opacity: 0.8;
  line-height: 1.4;
}

.ec-color-desc {
  display: block;
  font-size: var(--ec-font-xs, 20rpx);
  opacity: 0.6;
  line-height: 1.4;
}
