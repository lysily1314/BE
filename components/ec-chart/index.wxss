.ec-chart {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: var(--ec-white, #fff);
}

.ec-chart__canvas {
  width: 100%;
  height: 100%;
  display: block;
}

.ec-chart__tooltip {
  position: absolute;
  top: 0;
  left: 0;
  transform: translate(-50%, -100%);
  opacity: 0;
  transition: opacity 0.2s ease;
  pointer-events: none;
  z-index: 10;
}

.ec-chart__tooltip--show {
  opacity: 1;
}

.ec-chart__tooltip-content {
  background: rgba(0, 0, 0, 0.8);
  color: var(--ec-white, #fff);
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  line-height: 1.5;
  min-width: 120rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.ec-chart__tooltip-label {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 4rpx;
}

.ec-chart__tooltip-value {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--ec-white, #fff);
}
