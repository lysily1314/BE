<view class="demo-page">
  <!-- 基础用法 -->
  <view class="demo-block">
    <text class="demo-block__title">基础用法</text>
    <view class="demo-block__content demo-block__content--flush">
      <view class="tab-bar-demo">
        <ec-tab-bar active="{{active1}}" bind:click="onTabChange1">
          <ec-tab-bar-item icon="home" title="首页" />
          <ec-tab-bar-item icon="category" title="分类" />
          <ec-tab-bar-item icon="cart" title="购物车" />
          <ec-tab-bar-item icon="user" title="我的" />
        </ec-tab-bar>
      </view>
    </view>
  </view>

  <!-- 徽标提示 -->
  <view class="demo-block">
    <text class="demo-block__title">徽标提示</text>
    <view class="demo-block__content demo-block__content--flush">
      <view class="tab-bar-demo">
        <ec-tab-bar active="{{active2}}" bind:click="onTabChange2">
          <ec-tab-bar-item icon="home" title="首页" />
          <ec-tab-bar-item icon="category" title="分类" />
          <ec-tab-bar-item icon="cart" title="购物车" badge="5" />
          <ec-tab-bar-item icon="user" title="我的" dot />
        </ec-tab-bar>
      </view>
    </view>
  </view>

  <!-- 自定义颜色 -->
  <view class="demo-block">
    <text class="demo-block__title">自定义颜色</text>
    <view class="demo-block__content demo-block__content--flush">
      <view class="tab-bar-demo">
        <ec-tab-bar
          active="{{active3}}"
          active-color="#1989fa"
          inactive-color="#999"
          background="#f5f5f5"
          bind:click="onTabChange3"
        >
          <ec-tab-bar-item icon="home" active-icon="home-fill" title="首页" />
          <ec-tab-bar-item icon="category" active-icon="category-fill" title="分类" />
          <ec-tab-bar-item icon="cart" active-icon="cart-fill" title="购物车" />
          <ec-tab-bar-item icon="user" active-icon="user-fill" title="我的" />
        </ec-tab-bar>
      </view>
    </view>
  </view>

  <!-- 固定在底部 -->
  <view class="demo-block">
    <text class="demo-block__title">固定在底部</text>
    <view class="demo-block__content demo-block__content--desc">
      <text class="demo-desc__text">设置 fixed 属性可将标签栏固定在底部，常用于 App 首页导航。</text>
    </view>
  </view>

  <!-- 选项说明 -->
  <view class="demo-block">
    <view class="demo-block__content demo-block__content--desc">
      <text class="demo-desc__title">标签栏 TabBar</text>
      <text class="demo-desc__text">常用于 App 底部导航，支持图标、文字、徽标、红点等。可固定在底部，支持自定义颜色和图标。</text>
    </view>
  </view>
</view>

<!-- 固定在底部的标签栏 -->
<ec-tab-bar
  fixed
  active="{{active1}}"
  bind:click="onTabChange1"
>
  <ec-tab-bar-item icon="home" title="首页" />
  <ec-tab-bar-item icon="category" title="分类" />
  <ec-tab-bar-item icon="cart" title="购物车" badge="99+" />
  <ec-tab-bar-item icon="user" title="我的" />
</ec-tab-bar>
