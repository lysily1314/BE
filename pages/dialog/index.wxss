/* Dialog 示例页样式 */
.demo-page {
  min-height: 100vh;
  background: var(--ec-bg);
  padding-bottom: env(safe-area-inset-bottom);
}

.demo-block {
  padding: 0 32rpx;
  margin-bottom: 16rpx;
}

.demo-block__title {
  display: block;
  font-size: var(--ec-font-sm);
  color: var(--ec-text-placeholder);
  font-weight: 600;
  padding: 32rpx 0 20rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.demo-block__content {
  background: var(--ec-white);
  border-radius: var(--ec-radius-lg);
  padding: 32rpx;
}

.demo-block__content--row {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  align-items: center;
}

/* 自定义对话框内容 */
.custom-dialog-content {
  padding: 0 8rpx;
}

.custom-dialog-text {
  font-size: var(--ec-font-body);
  color: var(--ec-text-secondary);
  display: block;
  margin-bottom: 24rpx;
}

.custom-dialog-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.custom-dialog-tag {
  display: inline-block;
  padding: 12rpx 28rpx;
  font-size: var(--ec-font-sm);
  color: var(--ec-text-primary);
  background: var(--ec-bg);
  border-radius: var(--ec-radius);
  border: 2rpx solid var(--ec-border);
}

.custom-dialog-tag--active {
  color: var(--ec-primary);
  background: var(--ec-primary-light);
  border-color: var(--ec-primary);
}
