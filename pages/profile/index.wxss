/* 个人中心页面样式 */
.profile-page {
  min-height: 100vh;
  background: var(--ec-bg, #f7f8fa);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 顶部用户信息 */
.profile-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx 60rpx;
  position: relative;
}

.user-info {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background: #f5f5f5;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-content {
  flex: 1;
  min-width: 0;
}

.user-name {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-right: 16rpx;
}

.vip-level {
  font-size: 24rpx;
  color: #fff;
  background: linear-gradient(90deg, #FF4400, #FF6B35);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.login-tip {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.user-stats {
  display: flex;
  gap: 24rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #666;
}

/* 通用区块样式 */
.section {
  background: var(--ec-white, #fff);
  margin: 16rpx 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid var(--ec-border, #eee);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--ec-text-primary, #333);
}

.section-more {
  display: flex;
  align-items: center;
  color: var(--ec-text-secondary, #666);
}

.more-text {
  font-size: 26rpx;
  margin-right: 8rpx;
}

/* 订单状态 */
.order-stats {
  display: flex;
  padding: 32rpx 0;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.stat-icon {
  position: relative;
  margin-bottom: 16rpx;
}

.badge {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  background: #ee0a24;
  color: #fff;
  font-size: 20rpx;
  font-weight: 600;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 32rpx;
  padding: 0 8rpx;
  box-sizing: border-box;
  text-align: center;
  white-space: nowrap;
  transform: scale(0.8);
}

.stat-text {
  font-size: 26rpx;
  color: var(--ec-text-primary, #333);
}

/* 快捷功能 */
.quick-actions {
  display: flex;
  padding: 32rpx 0;
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 16rpx;
}

.action-text {
  font-size: 26rpx;
  color: var(--ec-text-primary, #333);
  margin-top: 16rpx;
}

/* 服务列表 */
.service-list {
  padding: 0;
}
