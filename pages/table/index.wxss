.demo-page {
  min-height: 100vh;
  background: var(--ec-bg);
  padding-bottom: env(safe-area-inset-bottom);
}

.demo-header {
  padding: 48rpx 32rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: var(--ec-white);
}

.demo-header__title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.demo-header__desc {
  display: block;
  font-size: var(--ec-font-body);
  opacity: 0.9;
}

.demo-section {
  padding: 0 0 32rpx;
}

.demo-block {
  padding: 0 32rpx;
  margin-bottom: 24rpx;
}

.demo-block__title {
  display: block;
  font-size: var(--ec-font-sm);
  color: var(--ec-text-placeholder);
  font-weight: 600;
  padding: 32rpx 0 20rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.demo-block__content {
  background: var(--ec-white);
  border-radius: var(--ec-radius-lg);
  padding: 32rpx;
}

.control-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--ec-border);
}

.control-row:last-child {
  border-bottom: none;
}

.control-label {
  font-size: var(--ec-font-body);
  color: var(--ec-text-primary);
}

.button-group {
  display: flex;
  gap: 20rpx;
}
