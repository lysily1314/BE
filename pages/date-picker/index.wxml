<view class="demo-page">
  <!-- 基础用法 -->
  <view class="demo-block">
    <text class="demo-block__title">基础用法</text>
    <view class="demo-block__content">
      <ec-cell 
        title="选择日期" 
        value="{{selectedDate || '请选择日期'}}" 
        is-link="{{true}}"
        bind:tap="onShowPicker"
      />
      <view style="display: flex; gap: 16rpx; margin-top: 20rpx;">
        <ec-button 
          type="primary" 
          size="small"
          bind:tap="onSetToday"
        >
          设为今天
        </ec-button>
        <ec-button 
          type="default" 
          size="small" 
          bind:tap="onClearDate"
        >
          清空日期
        </ec-button>
      </view>
    </view>
  </view>

  <!-- 显示当前选择的日期 -->
  <view class="demo-block" wx:if="{{selectedDate}}">
    <text class="demo-block__title">当前选择</text>
    <view class="demo-block__content">
      <view class="selected-date">
        <text>{{selectedDate}}</text>
      </view>
    </view>
  </view>

  <!-- 选项说明 -->
  <view class="demo-block">
    <view class="demo-block__content demo-block__content--desc">
      <text class="demo-desc__title">日期选择器 DatePicker</text>
      <text class="demo-desc__text">用于选择日期的组件。支持设置最小/最大日期范围，自定义标题和按钮文字，可通过 value 属性设置初始值，支持确认、取消、关闭等事件回调。</text>
    </view>
  </view>

  <!-- 日期选择器组件 -->
  <ec-date-picker
    show="{{showDatePicker}}"
    value="{{dateValue}}"
    title="请选择日期"
    min-date="{{minDate}}"
    max-date="{{maxDate}}"
    confirm-button-text="确定"
    cancel-button-text="取消"
    bind:confirm="onDateConfirm"
    bind:cancel="onDateCancel"
    bind:close="onDateClose"
  />
</view>
