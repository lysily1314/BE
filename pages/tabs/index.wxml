<view class="demo-page">
  <!-- 基础用法 -->
  <view class="demo-block">
    <text class="demo-block__title">基础用法</text>
    <view class="demo-block__content demo-block__content--flush">
      <ec-tabs active="{{active1}}" bind:change="onTabChange1">
        <ec-tab-pane title="标签1">
          <view class="tab-content">内容1</view>
        </ec-tab-pane>
        <ec-tab-pane title="标签2">
          <view class="tab-content">内容2</view>
        </ec-tab-pane>
        <ec-tab-pane title="标签3">
          <view class="tab-content">内容3</view>
        </ec-tab-pane>
      </ec-tabs>
    </view>
  </view>

  <!-- 卡片风格 -->
  <view class="demo-block">
    <text class="demo-block__title">卡片风格</text>
    <view class="demo-block__content demo-block__content--flush">
      <ec-tabs type="card" active="{{active2}}" bind:change="onTabChange2">
        <ec-tab-pane title="标签1">
          <view class="tab-content">卡片内容1</view>
        </ec-tab-pane>
        <ec-tab-pane title="标签2">
          <view class="tab-content">卡片内容2</view>
        </ec-tab-pane>
        <ec-tab-pane title="标签3">
          <view class="tab-content">卡片内容3</view>
        </ec-tab-pane>
      </ec-tabs>
    </view>
  </view>

  <!-- 滚动标签 -->
  <view class="demo-block">
    <text class="demo-block__title">滚动标签</text>
    <view class="demo-block__content demo-block__content--flush">
      <ec-tabs scrollable active="{{active3}}" bind:change="onTabChange3">
        <ec-tab-pane title="首页推荐">
          <view class="tab-content">首页内容</view>
        </ec-tab-pane>
        <ec-tab-pane title="热门榜单">
          <view class="tab-content">榜单内容</view>
        </ec-tab-pane>
        <ec-tab-pane title="新品上市">
          <view class="tab-content">新品内容</view>
        </ec-tab-pane>
        <ec-tab-pane title="限时特惠">
          <view class="tab-content">特惠内容</view>
        </ec-tab-pane>
        <ec-tab-pane title="品牌专区">
          <view class="tab-content">品牌内容</view>
        </ec-tab-pane>
      </ec-tabs>
    </view>
  </view>

  <!-- 自定义颜色 -->
  <view class="demo-block">
    <text class="demo-block__title">自定义颜色</text>
    <view class="demo-block__content demo-block__content--flush">
      <ec-tabs
        active="{{active4}}"
        active-color="#07C160"
        color="#999"
        background="#f5f5f5"
        bind:change="onTabChange4"
      >
        <ec-tab-pane title="绿色主题">
          <view class="tab-content">自定义颜色内容</view>
        </ec-tab-pane>
        <ec-tab-pane title="绿色主题">
          <view class="tab-content">自定义颜色内容</view>
        </ec-tab-pane>
      </ec-tabs>
    </view>
  </view>

  <!-- 禁用状态 -->
  <view class="demo-block">
    <text class="demo-block__title">禁用状态</text>
    <view class="demo-block__content demo-block__content--flush">
      <ec-tabs>
        <ec-tab-pane title="正常标签">
          <view class="tab-content">正常内容</view>
        </ec-tab-pane>
        <ec-tab-pane title="禁用标签" disabled>
          <view class="tab-content">禁用内容</view>
        </ec-tab-pane>
        <ec-tab-pane title="正常标签">
          <view class="tab-content">正常内容</view>
        </ec-tab-pane>
      </ec-tabs>
    </view>
  </view>
</view>
