.demo-page {
  min-height: 100vh;
  background: var(--ec-bg);
  padding-bottom: env(safe-area-inset-bottom);
}

.demo-header {
  padding: 48rpx 32rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: var(--ec-white);
}

.demo-header__title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.demo-header__desc {
  display: block;
  font-size: var(--ec-font-body);
  opacity: 0.9;
}

.demo-section {
  padding: 0 0 32rpx;
}

.demo-block {
  padding: 0 32rpx;
  margin-bottom: 24rpx;
}

.demo-block__title {
  display: block;
  font-size: var(--ec-font-sm);
  color: var(--ec-text-placeholder);
  font-weight: 600;
  padding: 32rpx 0 20rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.demo-block__content {
  background: var(--ec-white);
  border-radius: var(--ec-radius-lg);
  padding: 32rpx;
}

.demo-block__content--row {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  align-items: center;
}

.list-item {
  padding: 24rpx;
  border-bottom: 1rpx solid var(--ec-border);
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item__title {
  font-size: var(--ec-font-body);
  color: var(--ec-text-primary);
  font-weight: 500;
}

.list-item__desc {
  font-size: var(--ec-font-sm);
  color: var(--ec-text-secondary);
}

.horizontal-scroll-container {
  display: flex;
  gap: 20rpx;
  padding: 8rpx;
}

.horizontal-card {
  flex-shrink: 0;
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: var(--ec-radius);
  display: flex;
  align-items: center;
  justify-content: center;
}

.horizontal-card__title {
  color: var(--ec-white);
  font-size: var(--ec-font-body);
  font-weight: 500;
}

.info-text {
  display: block;
  font-size: var(--ec-font-sm);
  color: var(--ec-text-secondary);
  line-height: 1.6;
  white-space: pre-wrap;
}

.page-item {
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: var(--ec-radius);
  margin-bottom: 20rpx;
}

.page-item:last-child {
  margin-bottom: 0;
}

.page-item__text {
  color: var(--ec-white);
  font-size: var(--ec-font-title);
  font-weight: 600;
}
