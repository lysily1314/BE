/* Card 示例页样式 */
.demo-page {
  min-height: 100vh;
  background: var(--ec-bg);
  padding-bottom: env(safe-area-inset-bottom);
}

.demo-block {
  padding: 0 32rpx;
  margin-bottom: 16rpx;
}

.demo-block__title {
  display: block;
  font-size: var(--ec-font-sm);
  color: var(--ec-text-placeholder);
  font-weight: 600;
  padding: 32rpx 0 20rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.demo-block__content {
  max-width: 340rpx;
}

/* 双列网格 */
.card-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.card-grid__item {
  width: calc(50% - 10rpx);
}
