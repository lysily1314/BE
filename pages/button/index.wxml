<view class="demo-page">
  <!-- 按钮类型 -->
  <view class="demo-block">
    <text class="demo-block__title">按钮类型</text>
    <view class="demo-block__content demo-block__content--row">
      <ec-button type="primary" bind:tap="onTap">主要按钮</ec-button>
      <ec-button type="default" bind:tap="onTap">默认按钮</ec-button>
      <ec-button type="text" bind:tap="onTap">文字按钮</ec-button>
    </view>
  </view>

  <!-- 朴素按钮 -->
  <view class="demo-block">
    <text class="demo-block__title">朴素按钮</text>
    <view class="demo-block__content demo-block__content--row">
      <ec-button type="primary" plain>朴素按钮</ec-button>
      <ec-button type="default" plain>朴素按钮</ec-button>
    </view>
  </view>

  <!-- 按钮尺寸 -->
  <view class="demo-block">
    <text class="demo-block__title">按钮尺寸</text>
    <view class="demo-block__content demo-block__content--row">
      <ec-button type="primary" size="large">大号按钮</ec-button>
    </view>
    <view class="demo-block__content demo-block__content--row" style="margin-top: 20rpx;">
      <ec-button type="primary" size="medium">中号按钮</ec-button>
      <ec-button type="primary" size="small">小号按钮</ec-button>
    </view>
  </view>

  <!-- 圆角按钮 -->
  <view class="demo-block">
    <text class="demo-block__title">圆角按钮</text>
    <view class="demo-block__content demo-block__content--row">
      <ec-button type="primary" round>圆角按钮</ec-button>
      <ec-button type="default" round>圆角按钮</ec-button>
    </view>
  </view>

  <!-- 通栏按钮 -->
  <view class="demo-block">
    <text class="demo-block__title">通栏按钮</text>
    <view class="demo-block__content">
      <ec-button type="primary" block>通栏按钮</ec-button>
      <view style="height: 20rpx;"></view>
      <ec-button type="default" block>通栏按钮</ec-button>
    </view>
  </view>

  <!-- 禁用状态 -->
  <view class="demo-block">
    <text class="demo-block__title">禁用状态</text>
    <view class="demo-block__content demo-block__content--row">
      <ec-button type="primary" disabled>禁用按钮</ec-button>
      <ec-button type="default" disabled>禁用按钮</ec-button>
    </view>
  </view>

  <!-- 加载状态 -->
  <view class="demo-block">
    <text class="demo-block__title">加载状态</text>
    <view class="demo-block__content demo-block__content--row">
      <ec-button type="primary" loading="{{loading}}" bind:tap="onLoadingTap">{{loading ? '加载中' : '点击加载'}}</ec-button>
      <ec-button type="default" loading>加载中</ec-button>
    </view>
  </view>

  <!-- 带图标按钮 -->
  <view class="demo-block">
    <text class="demo-block__title">带图标按钮</text>
    <view class="demo-block__content demo-block__content--row">
      <ec-button type="primary" icon="cart">购物车</ec-button>
      <ec-button type="default" icon="heart">收藏</ec-button>
    </view>
  </view>
</view>
