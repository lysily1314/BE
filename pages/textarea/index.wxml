<view class="demo-page">
  <view class="demo-block">
    <text class="demo-block__title">基础用法</text>
    <view class="demo-block__content">
      <ec-textarea placeholder="请输入备注信息" value="{{remark}}" bind:change="onRemarkChange" border />
    </view>
  </view>

  <view class="demo-block">
    <text class="demo-block__title">显示字数统计</text>
    <view class="demo-block__content">
      <ec-textarea placeholder="请输入反馈内容" value="{{feedback}}" maxlength="{{200}}" show-count border bind:change="onFeedbackChange" />
    </view>
  </view>

  <view class="demo-block">
    <text class="demo-block__title">自动高度</text>
    <view class="demo-block__content">
      <ec-textarea placeholder="自动调节高度" auto-height border />
    </view>
  </view>

  <view class="demo-block">
    <text class="demo-block__title">禁用状态</text>
    <view class="demo-block__content">
      <ec-textarea value="此内容不可编辑" disabled border />
    </view>
  </view>
</view>
