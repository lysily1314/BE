<view class="demo-page">
  <!-- 基础用法 -->
  <view class="demo-block">
    <text class="demo-block__title">基础用法</text>
    <view class="demo-block__content">
      <ec-swiper-card
        list="{{basicList}}"
        bind:change="onChange"
        bind:imageclick="onImageClick"
        card-width="600"
        card-height="300"
      />
    </view>
  </view>

  <!-- 无标题轮播 -->
  <view class="demo-block">
    <text class="demo-block__title">无标题轮播</text>
    <view class="demo-block__content">
      <ec-swiper-card
        list="{{noTitleList}}"
        indicator-dots="top"
        card-width="600"
        card-height="300"
        show-shadow="{{false}}"
        show-radius="{{false}}"
      />
    </view>
  </view>

  <!-- 小卡片轮播 -->
  <view class="demo-block">
    <text class="demo-block__title">小卡片轮播</text>
    <view class="demo-block__content">
      <ec-swiper-card
        list="{{basicList}}"
        card-width="400"
        card-height="200"
        card-margin="10"
        indicator-dots="none"
      />
    </view>
  </view>

  <!-- 带指示器轮播 -->
  <view class="demo-block">
    <text class="demo-block__title">顶部指示器</text>
    <view class="demo-block__content">
      <ec-swiper-card
        list="{{productList}}"
        indicator-dots="top"
        indicator-color="#fff"
        indicator-active-color="#FF4400"
        card-width="650"
        card-height="320"
      />
    </view>
  </view>

  <!-- 参数配置 -->
  <view class="demo-block">
    <text class="demo-block__title">参数配置</text>
    <view class="demo-block__content">
      <ec-cell title="当前索引" value="{{current}}" is-link="{{false}}" />
      <ec-cell title="自动播放" value="{{true}}" is-link="{{false}}" />
      <ec-cell title="循环播放" value="{{true}}" is-link="{{false}}" />
      <ec-cell title="卡片宽度" value="600rpx" is-link="{{false}}" />
      <ec-cell title="卡片高度" value="300rpx" is-link="{{false}}" />
    </view>
  </view>

  <!-- 选项说明 -->
  <view class="demo-block">
    <view class="demo-block__content demo-block__content--desc">
      <text class="demo-desc__title">图片卡片轮播 SwiperCard</text>
      <text class="demo-desc__text">专为图片展示设计的卡片式轮播组件，支持自定义卡片大小、间距、阴影等效果。适用于商品展示、图片轮播等场景。</text>
    </view>
  </view>
</view>
